<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/indigo_600</item>
        <item name="android:textColorSecondary">@color/indigo_600</item>
        <item name="android:textColor">@color/indigo_900</item>
        <item name="colorPrimaryDark">@color/yellow_600</item>
        <item name="colorPrimary">@color/yellow_400</item>
        <item name="colorControlActivated">@color/indigo_400</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:icon">@color/indigo_800</item>

        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:itemTextAppearance">@style/customMenuTextAppearance</item>
        <item name="android:alertDialogTheme">@style/CustomLollipopDialogStyle</item>
        <item name="android:windowBackground">@color/grey_200</item>

    </style>

    <!-- MENU TEXT APPEARANCE-->
    <style name="customMenuTextAppearance">
        <item name="android:textColor">@color/indigo_900</item>
    </style>

    <!-- ACTION MODE-->
    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/yellow_200</item>
    </style>

    <!-- COLOR CONTROL LIGHT-->
    <!--<style name="colorControlLightTheme">-->
        <!--<item name="colorControlActivated">@color/indigo_600</item>-->
    <!--</style>-->

    <!-- DIALOG STYLE-->
    <style name="CustomLollipopDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/indigo_600</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/grey_900</item>
        <!-- Used for the background -->
        <!--<item name="android:background">#4CAF50</item>-->
    </style>

    <!-- ADD bookmark search background-->
    <style name="AddFrameLayoutStyle">
        <item name="elevation">4dp</item>
        <item name="android:background">@color/yellow_400</item>
    </style>

    <style name="ToolbarCustomStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/yellow_400</item>
    </style>

    <!--REVEAL menu STYLE-->
    <style name="RevealViewStyle">
        <item name="android:background">@color/yellow_400</item>
    </style>

    <style name="PasteClipboardButtonStyle">
        <item name="backgroundTint">@color/amber_600</item>
        <item name="android:src">@drawable/ic_content_paste_white_18dp</item>
    </style>

    <!-- BUTTON STYLE-->
    <style name="customMaterialButtonInvertedStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/indigo_600</item>
        <item name="android:textColor">@color/grey_50</item>
    </style>
    <!-- FAB STYLE-->
    <style name="customMaterialFabInvertedStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/amber_600</item>
        <item name="android:src">@mipmap/ic_chevron_right_white</item>
    </style>


    <!-- BUTTON STYLE-->
    <style name="CustomMaterialButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/amber_600</item>
        <item name="android:textColor">@color/grey_50</item>
    </style>

    <style name="AddBookmarkSearchBoxCollapseIcons">
        <item name="android:src">@drawable/ic_keyboard_arrow_down_black_24dp</item>
    </style>

    <style name="AddBookmarkSearchBoxExpandIcons">
        <item name="android:src">@drawable/ic_keyboard_arrow_up_black_24dp</item>
    </style>

    <!--MATERIAL search view -->
    <style name="MaterialSearchViewStyle">
        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/grey_900</item>
        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/indigo_600</item>
    </style>

    <style name="settingsBackgroundStyle">
        <item name="android:background">@color/grey_50</item>
    </style>
    <style name="BreadCrumbsViewStyle">
        <item name="backgroundColor">@color/yellow_300</item>
    </style>

    <style name="AddFolderViewStyle">
        <item name="android:background">@color/grey_50</item>
    </style>

    <style name="BookmarkCheckboxesStyle">
        <item name="android:background">@color/yellow_300</item>
    </style>

    <style name="SearchMaterialButtonStyle">
        <item name="backgroundTint">@color/grey_100</item>
    </style>

    <style name="customMaterialFabStyle">
        <item name="backgroundTint">@color/indigo_600</item>
    </style>
</resources>
