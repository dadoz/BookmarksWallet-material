<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/addBookmarkMainContainerLayoutId"
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_height="fill_parent">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/material_mustard_yellow"
                android:paddingBottom="@dimen/medium_padding"
                android:orientation="vertical">
            <!--<TextView-->
                    <!--android:id="@+id/addBookmarkDescriptionTextId"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:padding="@dimen/large_padding"-->
                    <!--android:textColor="@color/material_stone_black"-->
                    <!--android:text="Type in new bookmark url in the field below"/>-->
            <EditText
                    android:id="@+id/urlEditText"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/medium_padding"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:textColor="@color/material_stone_black"
                    android:minWidth="250dip"
                    android:maxLines="6"
                    android:hint="type bookmark url...">
                <requestFocus/>
            </EditText>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/small_padding"
                    android:layout_marginLeft="@dimen/medium_padding"
                    android:layout_marginRight="@dimen/medium_padding">
                <CheckBox
                        android:id="@+id/httpFormatCheckboxId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/material_violet_500"
                        android:checked="true"
                        android:text="http"
                        android:textColor="@color/material_violet_500"/>

                <CheckBox
                        android:id="@+id/httpsFormatCheckboxId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/material_violet_500"
                        android:text="https"
                        android:textColor="@color/material_violet_500"/>

            </LinearLayout>

            <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textColor="@color/material_violet_100"-->
                    <!--android:textSize="@dimen/text_size_14"-->
                    <!--android:layout_margin="@dimen/medium_padding"-->
                    <!--android:text="Type in a valid URL.\nFor example (http://www.google.it)"/>-->
        </LinearLayout>

        <LinearLayout
                android:id="@+id/addBookmarkDescriptionTextviewId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/large_padding"
                    android:paddingRight="@dimen/large_padding"
                    android:paddingTop="@dimen/large_padding"
                    android:gravity="center"
                    android:textColor="@color/material_violet_100"
                    android:textSize="@dimen/text_size_14"
                    android:text="Type in a valid URL.\nAn example:"/>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/large_padding"
                    android:paddingRight="@dimen/large_padding"
                    android:paddingBottom="@dimen/large_padding"
                    android:gravity="center"
                    android:textColor="@color/material_violet_500"
                    android:textSize="@dimen/text_size_18"
                    android:text="(http://www.yourUrl.com)"/>

        </LinearLayout>


        <LinearLayout
                android:id="@+id/errorLayoutId"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="96dip"
                    android:layout_height="96dip"
                    android:visibility="invisible"
                    android:src="@drawable/ic_error_white_48dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:padding="@dimen/large_padding"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_14"
                    android:text="Wrong bookmark url:\nplease check it out or add http "/>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
