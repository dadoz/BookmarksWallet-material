                android:layout_marginTop="40dip"
                android:id="@+id/urlEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/large_padding"
                android:layout_marginRight="@dimen/large_padding"
                android:textColor="@color/material_stone_black"
                android:minWidth="@dimen/abc_search_view_preferred_width"
                android:hint="type bookmark url..."/>
    <TextView
            android:layout_below="@id/urlEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/large_padding"
            android:textColor="@color/material_stone_black"
            android:text="Paste clipboard or type in new bookmark url in the field above"/>

