<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fab="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:background="@color/material_grey_200"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbarId"
            android:background="@color/material_mustard_yellow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar">
    </android.support.v7.widget.Toolbar>

        <android.support.v7.widget.CardView
                android:id="@+id/infoCardId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_padding"
                android:layout_below="@id/toolbarId"
                android:background="@color/white">
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/cardview_min_height"
                    android:padding="@dimen/small_padding"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/periodAddBookmarkTextId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_blue_200"
                        android:textSize="@dimen/abc_text_size_title_material"
                        android:text=" - "/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/bokmarksCounterTextId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/abc_text_size_display_1_material"
                            android:textColor="@color/material_blue_200"
                            android:paddingRight="@dimen/medium_padding"
                            android:text=" - "/>
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="new bookmars added"/>

                </LinearLayout>
                </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
                android:id="@+id/importFromChromeCardId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/medium_padding"
                android:layout_below="@id/infoCardId"
                android:background="@color/white">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="@dimen/cardview_min_height"
                    android:padding="@dimen/small_padding"
                    android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/abc_text_size_title_material"
                        android:paddingRight="@dimen/medium_padding"
                        android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha"/>
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/abc_text_size_title_material"
                            android:textColor="@color/material_blue_200"
                            android:paddingRight="@dimen/medium_padding"
                            android:text="Import from Chrome"/>
                    <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="tap icon to export your bookmark list"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/addLinkButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@android:drawable/ic_menu_save"
            fab:fab_colorNormal="@color/material_blue_200"
            fab:fab_colorPressed="@color/material_blue_200"
            android:layout_marginTop="@dimen/fab_margin_top"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true" />
</RelativeLayout>