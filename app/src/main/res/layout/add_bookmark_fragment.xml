<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <include layout="@layout/add_bookmark_collapsing_layout"/>


    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/iconSwipeRefreshLayoutId"
            android:layout_below="@id/addBookmarkMainContainerLayoutId"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">
        <LinearLayout
                android:id="@+id/iconImageViewId"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:background="?@android:attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">
            <ImageView
                    android:layout_width="@dimen/large_icon_size"
                    android:layout_height="@dimen/large_icon_size"
                    android:src="@drawable/ic_bookmark_outline_black_48dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/blue_grey_200"
                    android:text="Tap to set the\nbookmark icon!" />
        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>


    <android.support.design.widget.FloatingActionButton
            android:id="@+id/addBookmarkFabId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/large_padding"
            android:layout_below="@id/addBookmarkMainContainerLayoutId"
            android:layout_marginTop="@dimen/mini_fab_negative_margin"
            android:src="@drawable/ic_done_black_48dp"
            app:elevation="4dp"
            app:borderWidth="0dp"
            app:backgroundTint="@color/yellow_400"
            app:fabSize="normal"/>

</RelativeLayout>
