<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:id="@+id/linkLayoutId"
			  android:baselineAligned="false"
			  android:layout_width="match_parent"
			  android:layout_height="wrap_content"
			  android:orientation="horizontal"
			  android:background="@color/white"
			  android:minHeight="@dimen/link_row_height">

	<!--link_action_layout_id    -->
	<ImageView
			android:id="@+id/linkIconId"
			android:contentDescription="link_icon_id"
			android:layout_width="@dimen/fab_size_mini"
			android:layout_height="@dimen/fab_size_mini"
			android:layout_centerInParent="true"
			android:layout_alignParentLeft="true"
			android:layout_margin="@dimen/medium_padding"
			android:src="@drawable/web_icon_blue" />

	<!-- BUTTONS -->
	<TextView
			android:id="@+id/linkEditButtonId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:padding="@dimen/medium_padding"
			android:textSize="@dimen/text_size_14"
			android:text="EDIT"
			android:textColor="@color/material_blue_200" />
	<TextView
			android:id="@+id/linkDeleteButtonId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:padding="@dimen/medium_padding"
			android:textSize="@dimen/text_size_14"
			android:text="DELETE"
			android:textColor="@color/material_red" />
	<TextView
			android:id="@+id/linkSaveButtonId"
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			android:padding="@dimen/medium_padding"
			android:textSize="@dimen/text_size_14"
			android:text="SAVE"
			android:textColor="@color/material_stone_black" />

	<!-- TITLE -->
	<TextView
			android:id="@+id/linkTitleId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:layout_toRightOf="@id/linkIconId"
			android:layout_toLeftOf="@id/linkEditButtonId"
			android:padding="@dimen/medium_padding"
			android:text=" - "
			android:textSize="@dimen/text_size_20"
			android:ellipsize="end"
			android:maxLines="2"
			android:textColor="@color/material_stone_black" />


	<!-- edit layout -->
	<LinearLayout
			android:visibility="gone"
			android:id="@+id/editLinkLayoutId"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_toRightOf="@id/linkIconId"
			android:layout_toLeftOf="@id/linkEditButtonId"
			android:layout_marginTop="@dimen/big_padding"
			android:layout_marginBottom="@dimen/big_padding"
			android:layout_centerVertical="true"
			android:orientation="vertical">

		<EditText
				android:id="@+id/editLinkTitleId"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_toLeftOf="@id/linkEditButtonId"
				android:textSize="@dimen/text_size_20"
				android:padding="@dimen/medium_padding"
				android:text=" - "
				android:ellipsize="end"
				android:maxLines="2"
				android:focusable="true" />
		<EditText
				android:id="@+id/editLinkUrlId"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="@dimen/medium_padding"
				android:text=" - "
				android:ellipsize="end"
				android:maxLines="2"
				android:textSize="@dimen/text_size_14"
				android:textColor="@color/material_blue_200" />
	</LinearLayout>

</RelativeLayout>