<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/addBookmarkMainLayoutId"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/addBookmarkCardLayoutId"
        android:layout_margin="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/addBookmarkMainContainerLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_16">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/addBookmarkUrlTextInputId"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColorHint="@color/indigo_600">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/urlEditTextId"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/indigo_400"
                    android:maxLines="3"
                    android:hint="url...">
                </android.support.v7.widget.AppCompatEditText>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/addBookmarkTitleTextInputId"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addBookmarkUrlTextInputId"
                android:textColorHint="@color/indigo_600">
                <android.support.v7.widget.AppCompatEditText
                    android:id="@+id/titleEditTextId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="title..."
                    android:maxLength="50"
                    android:maxLines="2"
                    android:textColor="@color/indigo_400"/>
            </android.support.design.widget.TextInputLayout>
            <CheckBox
                android:id="@+id/addBookmarkHttpsCheckboxId"
                android:visibility="gone"
                android:layout_below="@id/addBookmarkTitleTextInputId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/https_checkbox_label"/>
            <ImageView
                android:id="@+id/toggleNameButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/addBookmarkUrlTextInputId"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <Button
        android:id="@+id/addBookmarkSearchButtonId"
        android:layout_below="@id/addBookmarkCardLayoutId"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/yellow_500"
        android:textColor="@color/indigo_600"
        android:text="SEARCH"/>

</RelativeLayout>
