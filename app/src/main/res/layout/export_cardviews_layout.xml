<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.card.MaterialCardView
        android:id="@+id/importFromKeepCardviewLayoutId"
        android:layout_margin="@dimen/padding_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_16">
            <ImageView
                android:id="@+id/imageViewId1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_archive_black_48dp"/>
            <TextView
                android:id="@+id/exportTitleTextId"
                android:layout_toRightOf="@id/imageViewId1"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_24"
                android:textColor="@color/indigo_600"
                android:text="@string/export_feature"/>
            <TextView
                android:id="@+id/exportDescriptionTextId"
                android:layout_toRightOf="@id/imageViewId1"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginTop="@dimen/small_padding"
                android:layout_below="@id/exportTitleTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/blue_grey_900"
                android:text="@string/export_description"/>
            <TextView
                android:id="@+id/exportCardviewButtonId"
                android:background="?attr/selectableItemBackground"
                android:layout_marginTop="@dimen/padding_16"
                android:layout_below="@id/exportDescriptionTextId"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/indigo_600"
                android:padding="12dp"
                android:text="@string/export_button_label"/>

        </RelativeLayout>
    </android.support.design.card.MaterialCardView>
</RelativeLayout>