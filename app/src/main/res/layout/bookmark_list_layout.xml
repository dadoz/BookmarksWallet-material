<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/material_grey_200"
        android:orientation="vertical">

    <include layout="@layout/actionbar_info_action_layout"/>
    <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/mainContainerViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.application.material.bookmarkswallet.app.recyclerView.RecyclerViewCustom
                android:id="@+id/linksListId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>
    </android.support.v4.widget.SwipeRefreshLayout>
    <include layout="@layout/empty_link_list_layout"/>
    <include layout="@layout/empty_search_result_layout"/>

    <!--BOTTOM bar-->
    <include layout="@layout/bottom_bar_undo_redo_layout"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/floatingMenuButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            fab:fab_expandDirection="up"
            fab:fab_addButtonPlusIconColor="@color/material_violet_500"
            fab:fab_addButtonColorNormal="@color/material_mustard_yellow"
            fab:fab_addButtonColorPressed="@color/material_mustard_yellow">
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/importFloatingButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_insert_drive_file_white_24dp"
                fab:fab_colorNormal="@color/material_violet_500"
                fab:fab_colorPressed="@color/material_violet_500"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/clipboardFloatingButtonId"
                android:layout_width="@dimen/fab_size_micro"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_content_paste_white_24dp"
                fab:fab_colorNormal="@color/material_violet_500"
                fab:fab_colorPressed="@color/material_violet_500"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/addLinkButtonId"
                android:layout_width="@dimen/fab_size_micro"
                android:layout_height="@dimen/fab_size_micro"
                fab:fab_size="mini"
                fab:fab_icon="@drawable/ic_edit_white_24dp"
                fab:fab_colorNormal="@color/material_violet_500"
                fab:fab_colorPressed="@color/material_violet_500"/>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
