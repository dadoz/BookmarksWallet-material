<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/backgroundLayoutId"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_8"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:padding="@dimen/padding_16"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">
        <ImageView
            android:id="@+id/linkIconId"
            android:contentDescription="link_icon_id"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_bookmark_black_48dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:id="@+id/linkTitleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/linkIconId"
            android:text="bookmark namedsf"
            android:layout_marginLeft="@dimen/padding_16"
            android:textSize="@dimen/text_size_24"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/indigo_600"/>
        <TextView
            android:id="@+id/linkUrlId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_16"
            android:layout_toRightOf="@id/linkIconId"
            android:layout_below="@id/linkTitleId"
            android:text="http://www.google.it"
            android:textSize="@dimen/text_size_14"
            android:ellipsize="end"
            android:minLines="2"
            android:maxLines="2"
            android:textColor="@color/blue_grey_900"/>
        <TextView
            android:id="@+id/linkTimestampId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_2"
            android:layout_alignParentRight="true"
            android:layout_below="@id/linkUrlId"
            android:textSize="@dimen/text_size_12"
            android:text="06/10/1986 "
            android:gravity="right"
            android:textColor="@color/grey_400"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>