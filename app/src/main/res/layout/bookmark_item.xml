<?xml version="1.0" encoding="utf-8"?>
<android.support.design.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_4"
    app:cardPreventCornerOverlap="true"
    app:cardElevation="0dp"
    app:cardCornerRadius="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/indigo_600">
    <RelativeLayout
        android:padding="@dimen/padding_16"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/linkTitleId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="bookmark TItle hey"
            android:layout_marginTop="@dimen/padding_8"
            android:textSize="@dimen/text_size_24"
            android:ellipsize="end"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/linkTimestampId"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            tools:text="06/10/1986"
            android:gravity="start"
            style="@style/DescriptionSecondaryTextColorStyle"/>

        <ImageView
            android:id="@+id/linkIconId"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_below="@+id/linkTitleId"
            android:layout_marginTop="@dimen/padding_8"

            tools:src="@drawable/ic_bookmark_black_48dp" />
        <TextView
            android:id="@+id/linkUrlId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linkTitleId"
            android:layout_toEndOf="@id/linkIconId"
            tools:text="http://www.google.it"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginStart="@dimen/padding_8"
            android:textSize="@dimen/text_size_14"
            android:textColor="@color/grey_300"
            android:ellipsize="end"
            android:minLines="2"
            android:maxLines="2"/>


    </RelativeLayout>
</android.support.design.card.MaterialCardView>