<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_height="wrap_content"
             android:layout_width="fill_parent">

    <LinearLayout
            android:background="?android:selectableItemBackground"
            android:id="@+id/linkLayoutId"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:minHeight="@dimen/link_row_height">

        <RelativeLayout
                android:baselineAligned="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding">

            <ViewFlipper
                    android:id="@+id/linkIconFlipperIconId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/linkIconId"
                        android:layout_gravity="center"
                        android:contentDescription="link_icon_id"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/medium_padding"
                        android:src="@drawable/ic_bookmark_outline_black_48dp"/>
                <ImageView
                        android:id="@+id/linkIconOpenedView"
                        android:layout_gravity="center"
                        android:contentDescription="link_icon_id"
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_margin="@dimen/medium_padding"
                        android:src="@drawable/ic_bookmark_outline_black_48dp"/>

            </ViewFlipper>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/linkIconFlipperIconId"
                    android:layout_marginRight="@dimen/row_timestamp_width"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/linkTitleId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="bookmark namedsf"
                        android:textSize="@dimen/text_size_24"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/material_blue_grey"/>
                <TextView
                        android:id="@+id/linkUrlId"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="http://www.google.it"
                        android:textSize="@dimen/text_size_14"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textColor="@color/material_red"/>

            </LinearLayout>
            <!-- DATE -->
            <TextView
                    android:id="@+id/linkTimestampId"
                    android:layout_width="wrap_content"
                    android:maxWidth="@dimen/row_timestamp_width"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingTop="@dimen/large_padding"
                    android:paddingRight="@dimen/medium_padding"
                    android:paddingBottom="@dimen/small_padding"
                    android:textSize="@dimen/text_size_14"
                    android:text=" date "
                    android:textColor="@color/highlight_color_2"/>
        </RelativeLayout>

        <LinearLayout
                android:id="@+id/moreInfoClosedContainerId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/moreInfoClosedIconId"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/linkTimestampId"
                    android:layout_marginRight="@dimen/medium_padding"
                    android:layout_gravity="right"
                    android:layout_width="@dimen/fab_icon_size"
                    android:layout_height="@dimen/fab_icon_size"
                    android:src="@drawable/ic_more_horiz_black_48dp"/>

        </LinearLayout>

        <TextView
                android:id="@+id/linkUrlOpenedId"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/medium_padding"
                android:padding="@dimen/medium_padding"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dip"
                android:gravity="center_vertical"
                android:background="@color/material_blue_grey"
                android:layout_alignParentLeft="true"
                android:text="http://www.google.it"
                android:textSize="@dimen/text_size_14"
                android:ellipsize="end"
                android:maxLines="10"
                android:textColor="@color/material_mustard_yellow"/>


    </LinearLayout>

</FrameLayout>