<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/material_grey_200"
        android:orientation="vertical">

    <include layout="@layout/actionbar_info_action_layout"/>
    <!--<android.support.v4.widget.SwipeRefreshLayout-->
    <com.application.material.bookmarkswallet.app.recyclerView.CustomSwipeRefreshLayout
            android:id="@+id/mainContainerViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.application.material.bookmarkswallet.app.recyclerView.RecyclerViewCustom
                android:id="@+id/linksListId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>
    </com.application.material.bookmarkswallet.app.recyclerView.CustomSwipeRefreshLayout>
    <include layout="@layout/empty_link_list_layout"/>
    <include layout="@layout/empty_search_result_layout"/>

    <!--BOTTOM bar-->
    <include layout="@layout/bottom_bar_undo_redo_layout"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
            android:id="@+id/floatingMenuButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            fab:fab_addButtonColorNormal="@color/material_blue_grey"
            fab:fab_addButtonColorPressed="@color/material_blue_grey">
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/importFloatingButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_icon="@drawable/ic_insert_drive_file_black_24dp"
                fab:fab_colorNormal="@color/material_red"
                fab:fab_colorPressed="@color/material_red"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/clipboardFloatingButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_icon="@drawable/ic_content_paste_black_24dp"
                fab:fab_colorNormal="@color/material_red"
                fab:fab_colorPressed="@color/material_red"/>
        <com.getbase.floatingactionbutton.FloatingActionButton
                android:id="@+id/addLinkButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_icon="@drawable/ic_edit_black_24dp"
                fab:fab_colorNormal="@color/material_red"
                fab:fab_colorPressed="@color/material_red"/>
    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
