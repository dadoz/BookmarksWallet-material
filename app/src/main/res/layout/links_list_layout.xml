<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/material_grey_200"
        android:orientation="vertical">

    <RelativeLayout
            android:id="@+id/mainContainerViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbarId">
        <com.application.material.bookmarkswallet.app.recyclerView.RecyclerViewCustom
                android:id="@+id/linksListId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>
    </RelativeLayout>

    <!--BOTTOM bar-->
    <RelativeLayout
            android:id="@+id/undoLinkDeletedLayoutId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:minHeight="@dimen/abc_action_bar_default_height_material"
            android:layout_alignParentBottom="true"
            android:background="@color/material_stone_black">
        <TextView
                android:id="@+id/dismissButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/medium_padding"
                android:textSize="@dimen/text_size_14"
                android:text="DISMISS"
                android:textColor="@color/white"/>
        <TextView
                android:id="@+id/undoButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/medium_padding"
                android:textSize="@dimen/text_size_14"
                android:text="UNDO"
                android:textColor="@color/material_mustard_yellow"/>

    </RelativeLayout>

    <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/addLinkButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_white_48dp"
            fab:fab_colorNormal="@color/material_blue_grey"
            fab:fab_colorPressed="@color/material_blue_grey"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
