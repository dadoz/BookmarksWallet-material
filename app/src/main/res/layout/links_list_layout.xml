<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/material_grey_200"
        android:orientation="vertical">

        <LinearLayout
                android:id="@+id/infoButtonLayoutId"
                android:background="@color/material_blue_grey"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_padding"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_info_outline_white_36dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/medium_padding"
                        android:layout_alignParentTop="true"
                        android:text="Info : 20 Jan - 30 Feb"/>

        </LinearLayout>
        <RelativeLayout
                android:id="@+id/mainContainerViewId"
                android:layout_below="@id/infoButtonLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.application.material.bookmarkswallet.app.recyclerView.RecyclerViewCustom
                        android:id="@+id/linksListId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="vertical"/>
            </RelativeLayout>

    <!--BOTTOM bar-->
        <include layout="@layout/bottom_bar_undo_redo_layout" />

    <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/addLinkButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_white_48dp"
            fab:fab_colorNormal="@color/material_blue_grey"
            fab:fab_colorPressed="@color/material_blue_grey"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
