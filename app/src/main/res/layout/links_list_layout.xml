<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:fab="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/material_grey_200"
        android:orientation="vertical">

    <include layout="@layout/actionbar_info_action_layout"/>
    <RelativeLayout
            android:layout_marginTop="@dimen/actionbar_infoaction_height"
            android:id="@+id/mainContainerViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <com.application.material.bookmarkswallet.app.recyclerView.RecyclerViewCustom
                android:id="@+id/linksListId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:scrollbars="vertical"/>
        <include layout="@layout/empty_link_list_layout"/>
        <include layout="@layout/empty_search_result_layout"/>
    </RelativeLayout>

    <!--BOTTOM bar-->
    <include layout="@layout/bottom_bar_undo_redo_layout"/>

    <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/addLinkButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_icon="@drawable/ic_add_white_48dp"
            fab:fab_colorNormal="@color/material_blue_grey"
            fab:fab_colorPressed="@color/material_blue_grey"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"/>
</RelativeLayout>
