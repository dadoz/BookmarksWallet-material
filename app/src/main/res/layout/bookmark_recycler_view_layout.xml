<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <android.support.v4.widget.SwipeRefreshLayout

                    android:layout_above="@id/toolbarId"
                    android:id="@+id/mainContainerViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                        android:id="@+id/linksListId"

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/fab_margin"
                        android:clipToPadding="false"
                        android:scrollbars="vertical"/>

            </android.support.v4.widget.SwipeRefreshLayout>
    <include layout="@layout/empty_link_list_layout"/>
    <include layout="@layout/empty_search_result_layout"/>


    <!--<include layout="@layout/bookmarks_not_sync_layout"/>-->
    <android.support.design.widget.FloatingActionButton
            android:id="@+id/addBookmarkFabId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="4dp"
            app:borderWidth="0dp"
            app:layout_behavior="com.application.material.bookmarkswallet.app.behavior.FloatingActionButtonBehavior"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_add_white_48dp"
            app:backgroundTint="@color/blue_grey_700"
            app:fabSize="normal"/>

</FrameLayout>