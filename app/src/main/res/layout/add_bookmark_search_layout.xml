<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:id="@+id/addBookmarkMainLayoutId"
    style="@style/RevealViewStyle">

    <RelativeLayout
        android:id="@+id/selectedFolderContainerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/selectedFolderTitleId"
            android:layout_marginTop="@dimen/margin_16"
            android:layout_marginLeft="@dimen/margin_16"
            android:layout_marginRight="@dimen/margin_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_24"
            android:text="@string/selected_folder"/>
        <android.support.v7.widget.CardView
            android:id="@+id/selectedFolderCardId"
            android:layout_below="@id/selectedFolderTitleId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_16">
            <include layout="@layout/linear_node_item"/>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/selectedFolderContainerId">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--folder view-->
            <TextView
                android:id="@+id/addBookmarkFolderTitleTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_16"
                android:layout_marginLeft="@dimen/padding_16"
                android:layout_marginRight="@dimen/padding_16"
                android:textSize="@dimen/text_size_24"
                android:text="@string/search_bookmark"/>

            <com.application.material.bookmarkswallet.app.views.SearchCardviewBoxView
                android:id="@+id/addBookmarkSearchCardviewBoxId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/addBookmarkSearchButtonId"
        android:layout_margin="@dimen/margin_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:fabSize="normal"
        style="@style/customMaterialFabInvertedStyle"/>
</RelativeLayout>
