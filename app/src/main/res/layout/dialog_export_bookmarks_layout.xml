<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exportFrameLayoutId"
    android:layout_width="match_parent"
    android:padding="@dimen/padding_16"
    android:layout_height="wrap_content"
    android:background="@color/grey_50">

    <!--<TextView-->
        <!--android:id="@+id/exportTitleTextId"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="@dimen/text_size_24"-->
        <!--android:textColor="@color/indigo_600"-->
        <!--android:text="@string/export_feature"/>-->
    <TextView
        android:id="@+id/exportDescriptionTextId"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_marginBottom="@dimen/padding_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_16"
        android:text="@string/export_description"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_below="@id/exportDescriptionTextId"
        android:id="@+id/exportHTMLCheckboxId"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"/>
    <TextView
        android:id="@+id/exportHTMLTextViewId"
        android:layout_toRightOf="@id/exportHTMLCheckboxId"
        android:layout_alignBaseline="@id/exportHTMLCheckboxId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_8"
        android:text="HTML"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:layout_below="@id/exportDescriptionTextId"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_toRightOf="@id/exportHTMLTextViewId"
        android:id="@+id/exportCSVCheckboxId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"/>
    <TextView
        android:id="@+id/exportCSVTextViewId"
        android:layout_marginLeft="@dimen/margin_8"
        android:layout_alignBaseline="@id/exportCSVCheckboxId"
        android:layout_toRightOf="@id/exportCSVCheckboxId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CSV"/>
    <ImageView
        android:visibility="gone"
        android:id="@+id/downloadBookamrksimageViewId"
        android:layout_below="@id/exportCSVTextViewId"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:src="@drawable/ic_bookmark_outline_black_48dp"/>
    <TextView
        android:id="@+id/totBookmarksExportedTextViewId"
        android:layout_below="@id/exportCSVTextViewId"
        android:layout_toRightOf="@id/downloadBookamrksimageViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16"
        android:textSize="@dimen/text_size_24"
        android:text="120"/>
    <TextView
        android:layout_below="@id/downloadBookamrksimageViewId"
        android:layout_alignBaseline="@id/totBookmarksExportedTextViewId"
        android:layout_toRightOf="@id/totBookmarksExportedTextViewId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_16"
        android:text="Bookmarks to be downloaded"/>

</RelativeLayout>
