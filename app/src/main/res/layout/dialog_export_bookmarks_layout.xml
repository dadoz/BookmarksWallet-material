<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/exportFrameLayoutId"
        android:layout_width="fill_parent"
        android:padding="@dimen/small_padding"
        android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/export_bookmarks_framelayout_width"
                android:gravity="center"
                android:paddingTop="@dimen/large_padding"
                android:paddingBottom="@dimen/large_padding"
                android:layout_marginLeft="@dimen/medium_padding"
                android:layout_marginRight="@dimen/medium_padding"
                android:orientation="vertical">
                <ImageView
                        android:id="@+id/exportConfirmButtonDialogId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_archive_grey600_48dp"/>

                <TextView
                        android:id="@+id/exportInfoTextId"
                        android:layout_below="@id/exportConfirmButtonDialogId"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/material_violet_100"
                        android:text="tap to DOWNLOAD"/>
                <TextView
                        android:id="@+id/exportSuccessTextId"
                        android:layout_below="@id/exportConfirmButtonDialogId"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Eureka:\n bookmarks exported with Success!\n checkout on Download folder."/>
                <TextView
                        android:id="@+id/exportErrorTextId"

                        android:layout_below="@id/exportConfirmButtonDialogId"
                        android:visibility="gone"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Error to export bookmarks! Please contact us!"/>
                <!--<TextView-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_alignParentBottom="true"-->
                        <!--android:id="@+id/dismissExportButtonDialogId"-->
                        <!--android:padding="@dimen/medium_padding"-->
                        <!--android:textSize="@dimen/abc_text_size_medium_material"-->
                        <!--android:textColor="@color/material_mustard_yellow_700"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="DISMISS"/>-->
        </LinearLayout>

</FrameLayout>
