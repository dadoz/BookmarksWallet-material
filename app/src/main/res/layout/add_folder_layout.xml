<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:background="@color/grey_50">
    <RelativeLayout
        android:id="@+id/bottomSheetContainerLayoutId"
        android:paddingTop="@dimen/padding_16"
        android:paddingLeft="@dimen/padding_16"
        android:paddingRight="@dimen/padding_16"
        android:paddingBottom="@dimen/padding_8"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/addFolderLabelTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_24"
            android:text="@string/action_add_folder"
            android:layout_marginBottom="@dimen/margin_8"/>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/addFolderTextInputLayoutId"
            android:layout_below="@id/addFolderLabelTextId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:hint="@string/add_folder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </android.support.design.widget.TextInputLayout>
        <Button
            android:layout_below="@id/addFolderTextInputLayoutId"
            android:id="@+id/addFolderButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_add_folder"
            android:backgroundTint="@color/amber_600"
            android:layout_alignParentRight="true"
            android:textColor="@color/grey_50"/>
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
