<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/importCardViewId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/medium_padding"
        android:background="@color/white">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/importIconId"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/icon_size"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:paddingRight="@dimen/medium_padding"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:src="@drawable/ic_swap_horiz_black_48dp"/>
                <LinearLayout
                        android:id="@+id/infoMainLayoutId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/medium_padding"
                        android:layout_toRightOf="@id/importIconId"
                        android:orientation="vertical">
                        <TextView
                                android:id="@+id/importTitleViewId"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/abc_text_size_title_material"
                                android:textColor="@color/material_blue_grey"
                                android:paddingRight="@dimen/medium_padding"
                                android:text="title"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="new bookmarks added"/>

                        <!--TODO replace with listview-->
                        <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/medium_padding">
                                <ImageView
                                        android:id="@+id/csvFormatIconId"
                                        android:layout_centerVertical="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/ic_book_black_24dp"/>
                                <TextView
                                        android:layout_toRightOf="@id/csvFormatIconId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:maxWidth="@dimen/import_label_width"
                                        android:text="csv format"/>
                                <CheckBox
                                        android:layout_alignParentRight="true"
                                        android:id="@+id/csvFormatCheckboxId"
                                        android:layout_centerVertical="true"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/medium_padding">
                                <ImageView
                                        android:id="@+id/htmlFormatIconId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/ic_book_black_24dp"/>
                                <TextView
                                        android:layout_toRightOf="@id/htmlFormatIconId"
                                        android:maxWidth="@dimen/import_label_width"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text="html format (Chrome/Firefox)"/>
                                <CheckBox
                                        android:layout_alignParentRight="true"
                                        android:id="@+id/htmlFormatCheckboxId"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>

                        </RelativeLayout>

                </LinearLayout>
                <RelativeLayout
                        android:layout_below="@id/infoMainLayoutId"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                                android:id="@+id/importButtonId"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/medium_padding"
                                android:layout_alignParentRight="true"
                                android:textSize="@dimen/abc_text_size_title_material"
                                android:textColor="@color/material_green"
                                android:text="IMPORT"/>
                </RelativeLayout>


        </RelativeLayout>

</android.support.v7.widget.CardView>
