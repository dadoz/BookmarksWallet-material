<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/addBookmarkRelativeLayoutId"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        style="@style/AddFrameLayoutStyle"
        android:id="@+id/addBookmarkRefreshLayoutId"
        android:layout_below="@id/addBookmarkMainContainerLayoutId"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_bookmark_background_margin">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <com.application.material.bookmarkswallet.app.views.AddBookmarkSearchLayout
        android:id="@+id/addBookmarkSearchLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <android.support.design.widget.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/pasteClipboardFabId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/margin_16"
        app:elevation="4dp"
        app:borderWidth="0dp"

        style="@style/PasteClipboardButtonStyle"
        app:fabSize="normal"/>
</FrameLayout>
