<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/addBookmarkLayoutId"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">
    <ImageView
            android:id="@+id/pasteFromClipboardButtonId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_class_white_36dp"/>

    <EditText
            android:id="@+id/addBookmarkUrlEditTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_18"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:minWidth="@dimen/abc_search_view_preferred_width"
            android:hint="type bookmark url..."/>

</LinearLayout>
