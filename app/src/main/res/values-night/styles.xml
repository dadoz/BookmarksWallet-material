<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/yellow_400</item>
        <item name="android:textColorSecondary">@color/yellow_400</item>

        <!--text-->
        <item name="android:textColor">@color/grey_50</item>
        <item name="colorPrimary">@color/indigo_600</item>
        <item name="colorPrimaryDark">@color/indigo_800</item>

        <!--actionmode-->
        <item name="colorControlActivated">@color/indigo_400</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:itemTextAppearance">@style/customMenuTextAppearance</item>
        <item name="android:alertDialogTheme">@style/CustomLollipopDialogStyle</item>
    </style>

    <!-- BUTTON STYLE-->
    <style name="customMaterialButtonIndigoStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/indigo_600</item>
    </style>

    <!-- BUTTON STYLE-->
    <style name="customMaterialButtonYellowStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/yellow_500</item>
    </style>

    <!-- MENU TEXT APPEARANCE-->
    <style name="customMenuTextAppearance">
        <item name="android:textColor">@color/blue_grey_900</item>
    </style>

    <!-- ACTION MODE-->
    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/yellow_200</item>
    </style>

    <!-- COLOR CONTROL LIGHT-->
    <style name="colorControlLightTheme">
        <item name="colorControlActivated">@color/indigo_600</item>
    </style>

    <!-- DIALOG STYLE-->
    <style name="CustomLollipopDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/indigo_600</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/blue_grey_900</item>
        <!-- Used for the background -->
        <!--<item name="android:background">#4CAF50</item>-->
    </style>
</resources>
