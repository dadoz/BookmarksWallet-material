<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/grey_50</item>
        <item name="android:textColorSecondary">@color/grey_50</item>
        <item name="android:textColor">@color/grey_200</item>

        <!--text-->
        <item name="colorPrimary">@color/indigo_600</item>
        <item name="colorPrimaryDark">@color/indigo_800</item>

        <!--actionmode-->
        <item name="colorControlActivated">@color/grey_50</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="actionModeStyle">@style/ActionMode</item>
        <item name="android:itemTextAppearance">@style/customMenuTextAppearance</item>
        <item name="android:alertDialogTheme">@style/CustomLollipopDialogStyle</item>
        <item name="colorControlNormal">@color/grey_50</item>

    </style>

    <!-- MENU TEXT APPEARANCE-->
    <style name="customMenuTextAppearance">
        <item name="android:textColor">@color/grey_900</item>
    </style>

    <!-- ACTION MODE-->
    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/indigo_400</item>
    </style>

    <!-- COLOR CONTROL LIGHT-->
    <!--<style name="colorControlLightTheme">-->
        <!--<item name="colorControlActivated">@color/grey_50</item>-->
    <!--</style>-->

    <!-- DIALOG STYLE-->
    <style name="CustomLollipopDialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/grey_200</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/grey_50</item>
        <!-- Used for the background -->
        <!--<item name="android:background">#4CAF50</item>-->
    </style>

    <!--MATERIAL search view -->
    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar -->
        <item name="searchBackground">@color/indigo_900</item>

        <!-- Change voice icon -->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>

        <!-- Change clear text icon -->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>

        <!-- Change up icon -->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>

        <!-- Change icon for the suggestions -->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions list view -->
        <item name="searchSuggestionBackground">@android:color/white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor -->
        <item name="android:textColor">@color/indigo_200</item>

        <!-- Change hint text color for edit text -->
        <item name="android:textColorHint">@color/grey_50</item>

        <!-- Hint for edit text -->
        <item name="android:hint">@string/search_hint</item>
    </style>

    <!-- ADD bookmark search background-->
    <style name="AddFrameLayoutStyle">
        <item name="android:background">@color/indigo_600</item>
    </style>

    <!--REVEAL menu STYLE-->
    <style name="RevealViewStyle">
        <item name="android:background">@color/indigo_600</item>
    </style>

    <!-- TOOLBAR style -->
    <style name="ToolbarCustomStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/indigo_600</item>
    </style>

    <!-- paste clipboard button -->
    <style name="PasteClipboardButtonStyle">
        <item name="backgroundTint">@color/grey_50</item>
        <item name="android:src">@drawable/ic_content_paste_black_18dp</item>
    </style>

    <!-- BUTTON STYLE-->
    <style name="CustomMaterialButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/indigo_600</item>
        <item name="android:textColor">@color/grey_50</item>
    </style>

    <!-- BUTTON STYLE-->
    <style name="customMaterialButtonInvertedStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/grey_50</item>
        <item name="android:textColor">@color/indigo_600</item>
    </style>

    <!--add bookmark text input style-->
    <style name="TextInputLayoutStyle">
        <item name="android:textColorHint">@color/grey_400</item>
    </style>
    <!--RESULT background -->
    <style name="ResultBackgroundStyle">
        <item name="android:background">@color/indigo_600</item>
    </style>

    <style name="DescriptionSecondaryTextColorStyle">
        <item name="android:textColor">@color/grey_400</item>
    </style>

    <style name="AddBookmarkSearchBoxCollapseIcons">
        <item name="android:src">@drawable/ic_keyboard_arrow_down_white_24dp</item>
    </style>

    <style name="AddBookmarkSearchBoxExpandIcons">
        <item name="android:src">@drawable/ic_keyboard_arrow_up_white_24dp</item>
    </style>

    <style name="CustomMaterialDrawerTheme" parent="MaterialDrawerTheme">
        <item name="material_drawer_background">@color/grey_800</item>
    </style>

    <style name="settingsBackgroundStyle">
        <item name="android:background">@color/grey_900</item>
    </style>

    <style name="BreadCrumbsViewStyle">
        <item name="backgroundColor">@color/indigo_500</item>
    </style>
    <style name="AddFolderViewStyle">
        <item name="android:background">@color/grey_800</item>
    </style>
    <style name="BookmarkCheckboxesStyle">
        <item name="android:background">@color/indigo_500</item>
    </style>

</resources>
