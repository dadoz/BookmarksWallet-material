<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"
          android:left="@dimen/large_padding"
          android:right="@dimen/large_padding">
        <shape android:dither="true" android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/button_radius" android:bottomRightRadius="@dimen/button_radius" android:topLeftRadius="@dimen/button_radius" android:topRightRadius="@dimen/button_radius" />

            <solid android:color="@color/blue_grey_900" />
        </shape>
    </item>
    <item android:state_pressed="true"
          android:left="@dimen/large_padding"
          android:right="@dimen/large_padding">
        <shape android:dither="true" android:shape="rectangle">
            <corners android:bottomLeftRadius="@dimen/button_radius" android:bottomRightRadius="@dimen/button_radius" android:topLeftRadius="@dimen/button_radius" android:topRightRadius="@dimen/button_radius" />

            <solid android:color="#80ffffff" />
        </shape>
    </item>

</selector>