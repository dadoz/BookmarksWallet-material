<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColorPrimary">@color/material_stone_black</item>
        <item name="colorPrimaryDark">@color/material_mustard_yellow_700</item>
        <item name="colorPrimary">@color/material_mustard_yellow</item>

        <item name="android:windowEnterTransition">@android:transition/slide_top</item>
        <item name="android:windowReturnTransition">@android:transition/slide_bottom</item>
        <item name="colorControlActivated">@color/material_violet_500</item>
        <item name="android:alertDialogTheme">@style/dialogStyle</item>
    </style>
    <style name="dialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/material_violet_500</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/material_violet_500</item>
            <!-- Used for the background -->
        <!--<item name="android:background">#4CAF50</item>-->
    </style>
</resources>
